<Window x:Class="AppCar.MinhDA.GUI.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCar.MinhDA.GUI"
        mc:Ignorable="d"
        Title="Thông Báo Ứng Dụng" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent">

    <Border Name="NotificationContainer"
            CornerRadius="{StaticResource CornerRadiusMedium}"
            Background="{StaticResource BackgroundPanelBrush}"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="5">

        <Border.Effect>
            <DropShadowEffect Color="#666666" Direction="270" ShadowDepth="5" Opacity="0.4" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
                <TextBlock Name="IconTextBlock" 
                           Text="ℹ" 
                           FontSize="28" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>

                <TextBlock Name="TitleTextBlock" 
                           Text="THÔNG BÁO" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource ForegroundDarkBrush}"/>
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Name="MessageTextBlock"
                       TextWrapping="Wrap"
                       Margin="20,5,20,20"
                       Foreground="{StaticResource ForegroundDarkBrush}"
                       FontSize="14"/>

            <Grid Grid.Row="2" Margin="20,0,20,20" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Name="NoButton" Content="KHÔNG" Grid.Column="0" Margin="0,0,10,0" 
                        Style="{StaticResource {x:Type Button}}" 
                        Background="#999999" 
                        Click="Button_Click"
                        Visibility="Collapsed"
                        MinWidth="80"/>

                <Button Name="YesButton" Content="CÓ" Grid.Column="1" 
                        Style="{StaticResource {x:Type Button}}" 
                        Click="Button_Click"
                        Visibility="Collapsed"
                        MinWidth="80"/>

                <Button Name="OkButton" Content="ĐỒNG Ý" Grid.ColumnSpan="2" 
                        Style="{StaticResource {x:Type Button}}" 
                        Click="Button_Click"
                        MinWidth="80"/>
            </Grid>
        </Grid>
    </Border>
</Window>
