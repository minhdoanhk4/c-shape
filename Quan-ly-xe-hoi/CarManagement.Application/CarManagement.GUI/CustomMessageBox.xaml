<Window x:Class="CarManagement.GUI.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarManagement.GUI"
        mc:Ignorable="d"
        Title="MessageBox" Height="220" Width="400"
        Style="{StaticResource BaseWindowStyle}"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Border Style="{StaticResource ContentCardStyle}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" x:Name="txtTitle" Text="Title" 
                       Style="{StaticResource HeaderTextStyle}" 
                       FontSize="20" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="1" x:Name="txtMessage" Text="This is the message text." 
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextLightColor}"
                       FontSize="15"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0,15,0,0">

                <Button x:Name="btnOk" Content="OK" 
                        Style="{StaticResource BtnPrimaryStyle}" 
                        MinWidth="80" Margin="0,0,10,0" Visibility="Collapsed"/>

                <Button x:Name="btnCancel" Content="Cancel" 
                        Style="{StaticResource BtnOutlineStyle}" 
                        MinWidth="80" Visibility="Collapsed"/>

                <Button x:Name="btnYes" Content="Yes" 
                        Style="{StaticResource BtnPrimaryStyle}" 
                        MinWidth="80" Margin="0,0,10,0" Visibility="Collapsed"/>

                <Button x:Name="btnNo" Content="No" 
                        Style="{StaticResource BtnOutlineStyle}" 
                        MinWidth="80" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>