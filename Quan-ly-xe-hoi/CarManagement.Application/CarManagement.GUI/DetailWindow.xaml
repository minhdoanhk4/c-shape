<Window x:Class="CarManagement.GUI.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarManagement.GUI"
        mc:Ignorable="d"
        Title="Car Details" Height="550" Width="450"
        Style="{StaticResource BaseWindowStyle}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" x:Name="txtTitle" Text="Car Details" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,10"/>

        <!-- Form nhập liệu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Car Name" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="txtName" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Brand" Style="{StaticResource LabelTextStyle}"/>
                <ComboBox x:Name="cboBrand" Style="{StaticResource ComboBoxInputStyle}" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <TextBlock Text="Car Type" Style="{StaticResource LabelTextStyle}"/>
                <ComboBox x:Name="cboCarType" Style="{StaticResource ComboBoxInputStyle}" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <TextBlock Text="Seat" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="txtSeat" Style="{StaticResource InputStyle}"/>

                <TextBlock Text="Description" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="txtDescription" Style="{StaticResource InputStyle}" 
                         Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalContentAlignment="Top" Padding="10,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Nút bấm Save/Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" 
                    Style="{StaticResource BtnPrimaryStyle}" 
                    Margin="0,0,10,0"
                    MinWidth="80"/>
            <Button x:Name="btnCancel" Content="Cancel" 
                    Style="{StaticResource BtnOutlineStyle}"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
