<Window x:Class="ManagementMusicPlayer.SE1824.DetailCompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementMusicPlayer.SE1824"
        mc:Ignorable="d"
        Title="Quản Lý Chi Tiết Hãng Sản Xuất" 
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtWindowTitle" 
                   Grid.Row="0" 
                   Text="THÊM MỚI HÃNG SẢN XUẤT" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Tên Hãng Sản Xuất (*)"/>
            <TextBox x:Name="txtCompanyName" Margin="0,5,0,15"/>

            <CheckBox x:Name="chkStatus" 
                      Content="Còn sản xuất" 
                      Margin="0,5,0,0"
                      FontSize="14"
                      FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Style="{StaticResource PrimaryButtonCRUD}" 
                    Width="80" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Style="{StaticResource SecondaryButton}" 
                    Width="80" Margin="10,0,0,0" IsCancel="True" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
