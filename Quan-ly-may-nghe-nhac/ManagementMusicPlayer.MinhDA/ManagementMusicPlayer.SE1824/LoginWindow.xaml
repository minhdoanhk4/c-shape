<Window x:Class="ManagementMusicPlayer.SE1824.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementMusicPlayer.SE1824"
        mc:Ignorable="d"
        Title="Quản Lý Máy Nghe Nhạc" 
        Height="480" Width="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/logo-app-player-mp3.png">
    <Border Background="White" 
            CornerRadius="15"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                              Direction="270" 
                              ShadowDepth="2" 
                              Color="#CCCCCC" 
                              Opacity="0.5"/>
        </Border.Effect>

        <StackPanel Margin="35">

            <TextBlock Text="Đăng Nhập" 
                       FontSize="30" 
                       FontWeight="SemiBold" 
                       Foreground="{StaticResource PrimaryColor}" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,10"/>

            <TextBlock Text="Chào mừng bạn đến với hệ thống quản lý" 
                       FontSize="14" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40"/>

            <TextBlock Text="Email" 
                       Foreground="{StaticResource TextColor}" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" 
                     d:Text="admin@app.com"
                     Tag="Nhập Email của bạn"
                     Margin="0,0,0,15"/>

            <TextBlock Text="Mật khẩu" 
                       Foreground="{StaticResource TextColor}" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="pwdPassword" 
                         d:Password="123456"
                         Margin="0,0,0,30"/>

            <Button x:Name="LoginButton" Content="ĐĂNG NHẬP" 
                    Style="{StaticResource PrimaryButton}"
                    
                    Margin="0,0,0,15" Click="LoginButton_Click"/>

            <Button x:Name="QuitButton" Content="Thoát" 
                    Style="{StaticResource SecondaryButton}"
                    HorizontalAlignment="Center" Width="97" Click="QuitButton_Click"/>

            <TextBlock x:Name="txtError"
                       Foreground="#FF3B30"
                       FontSize="12"
                       TextAlignment="Center"
                       Visibility="Collapsed"
                       Margin="0,15,0,0"/>

        </StackPanel>
    </Border>
</Window>
