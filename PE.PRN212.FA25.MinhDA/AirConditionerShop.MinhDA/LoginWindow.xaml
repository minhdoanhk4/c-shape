<Window x:Class="AirConditionerShop.MinhDA.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop.MinhDA"
        mc:Ignorable="d"
        Title="Air Conditioner Management - Login" 
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Style="{StaticResource DefaultSetting}"
        Icon="/assets/icon_app.ico">

    <Grid Margin="35,25,35,24">
        <Label Content="LOGIN" HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               Style="{StaticResource TitleLable}"/>
        
        <Label Content="Email" 
               Margin="0,45,304,0" VerticalAlignment="Top"
               Style="{StaticResource ContentLable}" 
               HorizontalAlignment="Right" Width="43"/>
        
        <TextBox x:Name="txtEmail" 
                 HorizontalAlignment="Center" Margin="0,74,0,0" 
                 TextWrapping="Wrap" Text="" 
                 VerticalAlignment="Top" Width="312"/>
        
        <Label Content="Password" HorizontalAlignment="Right" 
                Margin="0,121,279,0" VerticalAlignment="Top"
                Style="{StaticResource ContentLable}"/>
        
        <PasswordBox x:Name="txtPassword"
                    HorizontalAlignment="Center" Margin="0,150,0,0"
                    VerticalAlignment="Top" Width="312"/>
        
        <Button x:Name="LoginButton" 
                Content="Login" Margin="30,210,0,0" VerticalAlignment="Top"
                Style="{StaticResource PrimaryButton}" 
                HorizontalAlignment="Center" Width="80" Click="LoginButton_Click"/>

        <Button x:Name="QuitButton"
                Content="Quit" Margin="230,210,0,0" VerticalAlignment="Top"
                Style="{StaticResource SecondaryButton}" 
                HorizontalAlignment="Center" Width="80"/>
    </Grid>

</Window>
